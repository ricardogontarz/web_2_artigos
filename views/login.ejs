<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Choquei</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        /* signup.css */
        .prompt {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            height: 500px;
        }
        h3 {
            color: #333;
            text-align: center;
        }
        h1 {
            color: #007bff;
            margin-bottom: 30px;
            text-align: center;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        label {
            font-weight: bold;
            margin-bottom: 5px;
            color: #555;
        }
        input {
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: calc(100% - 22px);
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
        .help {
            margin-top: 20px;
            color: #777;
        }
        .help a {
            color: #007bff;
            text-decoration: none;
        }
        .help a:hover {
            text-decoration: underline;
        }

        @media screen and (max-width: 500px) {
            .prompt {
                width: 90%;
            }
        }
    </style>
</head>
<body>
<section class="prompt">
    <h3>Choquei</h3>
    <h1>Login</h1>

    <form action="#" method="post">
        <section>
            <label for="email">Email</label>
            <input id="email" name="email" type="email" autocomplete="email" required autofocus>
        </section>
        <section>
            <label for="current-password">Senha</label>
            <input id="current-password" name="senha" type="password" autocomplete="current-password" required>
        </section>
        <% if (messages.error) { %>
            <div class="error-message">
                <%= messages.error %>
            </div>
        <% } %>
        <button type="submit">Entrar na conta</button></form>
    <br>
</section>
</body>
</html>